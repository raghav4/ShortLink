doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='icon', href='../client/assets/favicon/login.ico', type='image/x-icon')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css')
    title Customize Short Link
  body
    .ui.middle.aligned.center.aligned.grid
      .column
        form.ui.large.form(action='/c/custom' method='post')
          .ui.stacked.secondary.segment
            .field
              .ui.left.icon.input
                p Enter existing ShortId and the Custom ShortId
            .field
                input(type='text', name='ShortId', placeholder='Existing ShortId' required)
            .field
                input(type='text', name='customId', placeholder='Custom ShortId' required)
            button(type="submit").ui.fluid.large.black.submit.button Customize
          .ui.error.message
    style.
      body>.grid {
      height: 100% !important;
      }
      .image {
      margin-top: -100px !important;
      }
      .column {
      max-width: 450px !important;
      margin-left: 55px !important;
      margin-right: 55px !important;
      }
      body {
      background: linear-gradient(110deg, #fdcd3b 60%, #ffed4b 60%);
      }
